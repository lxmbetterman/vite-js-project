{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "paths": {
          "@/*": ["src/*"] // @/的 ctrl 跳转
        }
    },
    "exclude": [
        "node_modules"
    ],
    "vueCompilerOptions": {
      "experimentalDisableTemplateSupport": true // 解决template蓝色波浪提示
    }
  }